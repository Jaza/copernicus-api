{
  "name": "copernicus-api",
  "version": "0.1.6",
  "description": "A fake banking API that's designed to be used in place of the Galileo API for testing purposes.",
  "main": "dist/app.js",
  "scripts": {
    "watch-server": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "create-tables": "ts-node createTables.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "build": "npm run lint && npm run build-ts",
    "start": "npm run serve",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": "14.x.x",
    "npm": "6.x.x"
  },
  "author": "Jeremy Epstein",
  "license": "Apache-2.0",
  "homepage": "https://github.com/Jaza/copernicus-api",
  "keywords": [
    "banking",
    "api",
    "fake",
    "galileo",
    "copernicus"
  ],
  "repository": "github:Jaza/copernicus-api",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/koa": "2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^6.0.2",
    "@types/koa__cors": "^3.0.2",
    "@types/koa__router": "^8.0.4",
    "@types/node": "^14.18.12",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.7",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "aws-sdk": "^2.1105.0",
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^8.0.3",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-jwt": "^4.0.0",
    "koa-swagger-decorator": "^1.6.4",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.3.3"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/tests/**/*.+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
